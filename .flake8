[flake8]

jobs = auto
verbose = 0
quiet = 0

format = default
count = True
show-source = True
statistics = True

output-file = flake8.log
tee = True

ignore = E111, E133, E203, W503

exclude =
    .git,
    __pycache__,
    .github,
    __pytest_cache__,
    .vscode,
    env,
    build,
    dist,
    docs,
    htmlcov,
    ignore,
    hocrox_torch.egg-info,
    test.py,
    conftest.py

filename =
    *.py

disable-noqa = False
max-line-length = 120
max-complexity = 15
hang-closing = True

doctests = True

per-file-ignores =
    __init__.py: F401